@section css{
    <!-- DataTables CSS -->
    <link href="/Areas/Assets/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/Assets/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

}
@{
    ViewBag.Title = "Sản phẩm";
}
<div id="idProduct">
    <div class="my-style-product">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <button type="button" class="btn btn-default btn-bitbucket" id="btnAdd">
                        <i class="fa fa-plus"> Thêm</i>
                    </button>

                    <button type="button" class="btn btn-info btn-bitbucket" id="btnEdit">
                        <i class="fa fa-edit"> Sửa</i>
                    </button>
                    <button type="button" class="btn btn-danger btn-bitbucket" id="btnDelete">
                        <i class="fa fa-remove"> Xóa</i>
                    </button>
                    <button type="button" class="btn btn-warning btn-bitbucket" id="btnCancel">
                        <i class="fa fa-times"> Hủy</i>
                    </button>
                    <button type="button" class="btn btn-primary btn-bitbucket" id="btnList">
                        <i class="fa fa-list"> Danh sách</i>
                    </button>
                    <input type="text" class="form-control cs-input-initial-right" placeholder="Nhập từ khóa" id="txtFind" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <input type="hidden" name="Id" value="0" />
                <div class="form-group">
                    <label>Mã sản phẩm: </label>
                    <input class="form-control" name="KeyWord" />
                </div>
                <div class="form-group">
                    <label>Tên sản phẩm: </label>
                    <input class="form-control" name="Name" />
                </div>
                <div class="form-group">
                    <label>Ghi chú: </label>
                    <textarea class="form-control" rows="4" name="Describe"></textarea>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <input id="btnImageChoose" type="file" class="hidden" accept="image/*" />
                    <label>Ảnh: </label>
                    <img class="img-responsive cs-img-default" id="imgDisplay" />
                    <label for="btnImageChoose" class="btn btn-flickr bg-success">Duyệt</label>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="page-footer">
                    <button type="button" class="btn btn-primary btn-bitbucket" id="btnSave">
                        <i class="fa fa-save"> Lưu</i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalList" role="dialog" tabindex="-1" aria-labelledby="mediumModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg cs-modal" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="smallModalLabel">Danh sách sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">

                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <table class="table table-striped table-bordered table-hover" id="bootstrap-data-table">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Mã hàng</th>
                                                <th>Tên hàng</th>
                                                <th>Mô tả</th>
                                                <th>Không sử dụng</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                    </table>

                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>

                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="/Areas/Assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/Assets/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/Assets/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/Areas/Admin/Scripts/Product.js"></script>
}

